# Leaky Wallet Environment Variables
# Copy this file to .env.local and fill in your values

# Backend API URL
NEXT_PUBLIC_API_URL=http://localhost:8000

# Feature Flags
NEXT_PUBLIC_BANK_CONNECT_BETA=false

# Plaid Configuration (required for bank connect)
# Get these from https://dashboard.plaid.com/
PLAID_CLIENT_ID=your_client_id_here
PLAID_SECRET=your_secret_here
PLAID_ENV=sandbox  # sandbox, development, or production

# Stripe Configuration (required for Pro Report payments)
# Get these from https://dashboard.stripe.com/apikeys
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_key_here
STRIPE_SECRET_KEY=sk_test_your_key_here
PRO_REPORT_PRICE_CENTS=199

# Stripe Webhook Secret (get from Stripe Dashboard → Webhooks)
# Required for production webhook signature verification
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Admin API Key (for /api/admin/payments endpoint)
ADMIN_API_KEY=your_admin_api_key_here

# Resend Configuration (for emailing Pro Reports)
# Get your API key from https://resend.com/api-keys
RESEND_API_KEY=re_your_key_here

# Primary sender — use your verified domain once DNS is confirmed
RESEND_FROM_PRIMARY=Leaky Wallet <reports@whereismymoneygo.com>

# Fallback sender — Resend's default that always works
RESEND_FROM_FALLBACK=Leaky Wallet <onboarding@resend.dev>

# Email feature flags
# Set to false to disable email sending entirely (PDF download still works)
EMAIL_SENDING_ENABLED=true
# Set to false to skip fallback sender when primary fails with domain error
EMAIL_FALLBACK_ENABLED=true

# Note: Never commit .env.local to git
# The .gitignore should already exclude it
