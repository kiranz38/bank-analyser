# Leaky Wallet Environment Variables
# Copy this file to .env.local and fill in your values

# Backend API URL
NEXT_PUBLIC_API_URL=http://localhost:8000

# Feature Flags
NEXT_PUBLIC_BANK_CONNECT_BETA=false

# Plaid Configuration (required for bank connect)
# Get these from https://dashboard.plaid.com/
PLAID_CLIENT_ID=your_client_id_here
PLAID_SECRET=your_secret_here
PLAID_ENV=sandbox  # sandbox, development, or production

# Stripe Configuration (required for Pro Report payments)
# Get these from https://dashboard.stripe.com/apikeys
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_key_here
STRIPE_SECRET_KEY=sk_test_your_key_here
PRO_REPORT_PRICE_CENTS=499

# Resend Configuration (for emailing Pro Reports)
# Get your API key from https://resend.com/api-keys
RESEND_API_KEY=re_your_key_here
EMAIL_FROM=Leaky Wallet <onboarding@resend.dev>

# Note: Never commit .env.local to git
# The .gitignore should already exclude it
